    "parcel-bundler": "^1.12.3",
    "prettier": "^1.16.4"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon index.js",
    "test": "yarn lint",
    "lint": "yarn server:lint & yarn client:lint",
    "client:build": "parcel build client/src/index.html --out-dir client/dist",
    "client:lint": "eslint --no-ignore -c client/.eslintrc --ext .js --ext .jsx client/src",
    "client:start": "parcel serve client/src/index.html --out-dir client/dist --cache-dir client/cache",
    "client:test": "yarn client:lint",
    "server:lint": "eslint .",
    "server:test": "yarn server:lint"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "semi": false,
    "trailingComma": "es5"
  },
  "nodemonConfig": {
    "ignore": ["client/**/*"]
  }
}
